<h1>All Transcriptions</h1>

<% if @transcriptions.present? %>
  <table border="1" cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Content</th>
        <th>Status</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @transcriptions.each do |t| %>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.content %></td>
          <td><%= t.status %></td>
          <td><%= t.created_at.strftime("%d-%m-%Y %H:%M") %></td>
          <td>
            <%= link_to "Show", transcription_path(t), class: "btn-show", style: "margin-right: 10px;" %>
            <%= button_to "Delete", transcription_path(t), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-delete" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No transcriptions found.</p>
<% end %>
